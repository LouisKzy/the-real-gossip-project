<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h1 class="bg-warning p-3 text-center">Inscription</h1>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :age, 'Quel est votre age ?' %>
          <%= f.number_field :age, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :first_name, 'Prénom' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, "Nom de famille" %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'Adresse email' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Une courte descrpition sur vous-même" %>
          <%= f.text_field :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Mot de passe' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirmer le mot de passe' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :city_id, 'Ville' %>
          <%= f.collection_select :city_id, City.all, :id, :name, { prompt: 'Sélectionnez la ville d\'où vous venez' }, class: 'form-control' %>
        </div>
        <%= f.submit "S'inscrire", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
