<div class="container mt-4">
  <div class="card">
    <div class="card-body">
      <h1 class="bg-warning p-3 text-center">Créer un nouveau potin</h1>
      <%= form_for @gossip do |f| %>
        <div class="form-group">
          <%= f.label :title, 'Titre du Potin' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :content, 'Contenu du Potin' %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :user_id, 'Auteur du Potin' %>
          <%= f.collection_select :user_id, User.all, :id, :first_name, { prompt: "Sélectionnez l\'auteur" }, class: 'form-control' %>
        </div>
        <%= f.submit 'Créer le potin', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
